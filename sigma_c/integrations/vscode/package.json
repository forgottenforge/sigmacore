{
  "name": "sigma-c-vscode",
  "displayName": "Sigma-C Criticality Monitor",
  "description": "Real-time code criticality analysis in VSCode",
  "version": "2.0.0",
  "publisher": "ForgottenForge",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sigma-c.analyze",
        "title": "Sigma-C: Analyze Current File"
      },
      {
        "command": "sigma-c.toggleMonitoring",
        "title": "Sigma-C: Toggle Real-time Monitoring"
      }
    ],
    "configuration": {
      "title": "Sigma-C",
      "properties": {
        "sigma-c.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Sigma-C monitoring"
        },
        "sigma-c.threshold": {
          "type": "number",
          "default": 0.7,
          "description": "Criticality threshold for warnings"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "typescript": "^4.8.0"
  }
}
